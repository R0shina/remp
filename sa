// Function to calculate total working days in a month
function getTotalWorkingDaysInMonth($firstDayOfMonth, $lastDayOfMonth, $publicHolidays) {
    $totalWorkingDays = 0;
    $currentDate = strtotime($firstDayOfMonth);

    while ($currentDate <= strtotime($lastDayOfMonth)) {
        $currentDateString = date('Y-m-d', $currentDate);

        if (date('N', $currentDate) != 6 && !in_array($currentDateString, $publicHolidays)) {
            // Increment total working days for each non-Saturday and non-public holiday
            $totalWorkingDays++;
        }

        $currentDate = strtotime('+1 day', $currentDate);
    }

    return $totalWorkingDays;
}

if ($_SESSION['ROLE'] == 1) {
    if (isset($_POST['submit'])) {
        $employeeId = $_POST['employeeId'];
        $employeeName = $_POST['employeeName'];
        $salary = $_POST['salary'];

        // Step 1: Authenticate employee name and ID
        $sql = "SELECT * FROM employee WHERE id='$employeeId' AND name='$employeeName'";
        $res = mysqli_query($con, $sql);
        $numRows = mysqli_num_rows($res);
        if ($numRows == 0) {
            $error = "Invalid employee ID or name";
        } else {
            // Define the public holidays array
            $publicHolidays = array(
                '2023-01-01', // New Year's Day
                '2023-07-04', // Independence Day
                // Add more public holidays as needed
            );

            // Step 2: Retrieve leave history for the specified date range (28th to last day of the month)
            $firstDayOfMonth = date('Y-m-1'); // Get the 28th day of the current month
            $lastDayOfMonth = date('Y-m-t'); // Get the last day of the current month

            $sql = "SELECT sum(leave_to-leave_from+1) as leave_days, `leave`.*, employee.name, employee.id as eid 
                    FROM `leave`, employee 
                    WHERE `leave`.employee_id=employee.id AND `leave`.employee_id='$employeeId' 
                    AND leave_from BETWEEN '$firstDayOfMonth' AND '$lastDayOfMonth'
                    GROUP BY leave_from, leave_to 
                    ORDER BY `leave`.id DESC";

            $res = mysqli_query($con, $sql);

            // Step 3: Calculate total leave days for the specified date range
            $totalLeaveDays = 0;
            while ($row = mysqli_fetch_assoc($res)) {
                $leaveFrom = strtotime($row['leave_from']);
                $leaveTo = strtotime($row['leave_to']);
                $leaveDuration = ($leaveTo - $leaveFrom) / (60 * 60 * 24) + 1; // Add 1 to include both the start and end dates of leave
                $totalLeaveDays += $leaveDuration;
            }

            // Step 4: Calculate effective working days excluding Saturdays and public holidays for the specified date range
            $saturdayCount = 0;
            $publicHolidayCount = 0;
            $currentDate = strtotime($firstDayOfMonth);

            while ($currentDate <= strtotime($lastDayOfMonth)) {
                $currentDateString = date('Y-m-d', $currentDate);

                if (date('N', $currentDate) == 6) { // 6 represents Saturday (ISO-8601 format)
                    $saturdayCount++;
                }

                // Check if the current date is a public holiday
                if (in_array($currentDateString, $publicHolidays)) {
                    $publicHolidayCount++;
                }

                $currentDate = strtotime('+1 day', $currentDate);
            }

            // Deduct Saturdays and public holidays from the effective working days
            $effectiveWorkingDays = (strtotime($lastDayOfMonth) - strtotime($firstDayOfMonth)) / (60 * 60 * 24) + 1 - $saturdayCount - $publicHolidayCount;

            // Step 5: Calculate the daily salary based on the provided monthly salary
            $monthlySalary = $salary;
            $dailySalary = $monthlySalary / $effectiveWorkingDays;

            // Calculate the salary after deducting for leave days
            $salaryAfterLeaveDeduction = $effectiveWorkingDays * $dailySalary;

            // Step 6: Save the employee details and salary calculation to the database
            $insertSql = "INSERT INTO salary (employee_id, employee_name, monthly_salary, daily_salary, total_working_days, total_leave_days, effective_working_days, calculated_salary) 
                          VALUES ('$employeeId', '$employeeName', '$monthlySalary', '$dailySalary', '$effectiveWorkingDays', '$totalLeaveDays', '$effectiveWorkingDays', '$salaryAfterLeaveDeduction')";
            mysqli_query($con, $insertSql);
        }
    } else {
        $employeeId = '';
        $employeeName = '';
        $salary = '';
    }
} else {
    // User is not an admin, redirect them to view salary page
    header('Location: view_salary.php');
    exit();
}

// Redirect to salary details page
if (isset($_POST['submit']) && empty($error)) {
    header('Location: salary_details.php');
    exit();
}

